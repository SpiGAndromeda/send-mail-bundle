{
  "name": "spigandromeda/send-mail-bundle",
  "type": "symfony-bundle",
  "description": "Mail bundle for Symfony 3 to send mails via SMTP and place a copy in a predefined folder via IMAP",
  "keywords": [
    "imap",
    "smtp",
    "mail"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "SpiGAndromeda",
      "email": "spigandromeda@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.3.2",
    "php-imap/php-imap": "~2.1",
    "symfony/framework-bundle": ">=3.0.0",
    "symfony/swiftmailer-bundle": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "SpiGAndromeda\\SendMailBundle\\": ""
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}